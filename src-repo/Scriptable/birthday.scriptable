function getNextSolarFromLunar(lMonth, lDay) {
  const now = new Date();
  const currentYear = now.getFullYear();
  
  // åœ¨å½“å‰å¹´å’Œä¸‹ä¸€å¹´ä¸­å¯»æ‰¾åŒ¹é…çš„å…¬å†æ—¥æœŸ
  for (let y = currentYear; y <= currentYear + 1; y++) {
    // å†œå†ç”Ÿæ—¥é€šå¸¸åœ¨å…¬å†çš„ y å¹´ 1æœˆ åˆ° y+1 å¹´ 3æœˆä¹‹é—´
    let startDate = new Date(y, 0, 1);
    for (let d = 0; d < 385; d++) {
      let checkDate = new Date(startDate.getTime() + d * 24 * 60 * 60 * 1000);
      let lunar = sloarToLunar(checkDate.getFullYear(), checkDate.getMonth() + 1, checkDate.getDate());
      
      // åŒ¹é…æœˆä»½å’Œæ—¥æœŸï¼ˆå¿½ç•¥é—°æœˆå­—ç¬¦ï¼ŒåªåŒ¹é…æ•°å­—ï¼‰
      let mMatch = lunar.rawM === lMonth;
      let dMatch = lunar.rawD === lDay;
      
      if (mMatch && dMatch) {
        // å¦‚æœæ‰¾åˆ°çš„æ—¥æœŸåœ¨ä»Šå¤©ä¹‹å‰ï¼Œç»§ç»­æ‰¾ä¸‹ä¸€å¹´çš„
        if (checkDate.getTime() < new Date(now.getFullYear(), now.getMonth(), now.getDate()).getTime()) continue;
        return checkDate;
      }
    }
  }
}

// æ ¸å¿ƒè½¬æ¢ç®—æ³• (ä¿®æ­£ç‰ˆä»¥è¿”å›åŸå§‹æ•°å€¼ç”¨äºæ¯”å¯¹)
function sloarToLunar(sy, sm, sd) {
  let sm_idx = sm - 1;
  let daySpan = (Date.UTC(sy, sm_idx, sd) - Date.UTC(1949, 0, 29)) / 86400000 + 1;
  let ly, lm, ld;
  for (let j = 0; j < lunarYearArr.length; j++) {
    let days = lunarYearDays(lunarYearArr[j]);
    if (daySpan <= days) { ly = 1949 + j; break; }
    daySpan -= days;
  }
  let months = lunarYearMonths(lunarYearArr[ly - 1949]);
  for (let k = 0; k < months.length; k++) {
    if (daySpan <= months[k]) { lm = k + 1; ld = daySpan; break; }
    daySpan -= months[k];
  }
  // è¿™é‡Œçš„ lm éœ€è¦å¤„ç†é—°æœˆé€»è¾‘ï¼Œä½†ä¸ºäº†ç”Ÿæ—¥åŒ¹é…ï¼Œæˆ‘ä»¬è¿”å›åŸå§‹ç´¢å¼•
  return { rawM: lm, rawD: Math.floor(ld) };
}

function lunarYearDays(ly) {
  let total = 0;
  for (let i = 0x8000; i > 0x8; i >>= 1) total += (ly & i) ? 30 : 29;
  if (ly & 0xf) total += (ly & 0xf0000) ? 30 : 29;
  return total;
}

function lunarYearMonths(ly) {
  let ms = [];
  for (let i = 0x8000; i > 0x8; i >>= 1) ms.push((ly & i) ? 30 : 29);
  if (ly & 0xf) ms.splice(ly & 0xf, 0, (ly & 0xf0000) ? 30 : 29);
  return ms;
}

