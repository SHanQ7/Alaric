async function createWidget() {
  const listWidget = new ListWidget();
  const now = new Date();
  const todayStr = `${now.getMonth()+1}-${now.getDate()}`;
  
  let bDayPerson = null;
  const processed = familyData.map(p => {
    const solar = getNextSolarFromLunar(p.month, p.day);
    const isToday = (now.getMonth() === solar.getMonth() && now.getDate() === solar.getDate());
    if (isToday) bDayPerson = p;
    return { ...p, solar, isToday };
  });

  // èƒŒæ™¯ï¼šç”Ÿæ—¥å˜çº¢ï¼Œå¹³æ—¶å˜é»‘
  if (bDayPerson) {
    let grad = new LinearGradient();
