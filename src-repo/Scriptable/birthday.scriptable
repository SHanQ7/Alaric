    // ç»˜åˆ¶åœ†ç¯ä¸­å¿ƒçš„è£…é¥° (ç”Ÿæ—¥å½“å¤©æ˜¾ç¤ºè›‹ç³•)
    if (p.isToday) {
      ctx.setFont(Font.systemFont(24));
      ctx.drawTextInRect("ğŸ‚", new Rect((canvasSize - ringSize)/2, 35 + 20, ringSize, ringSize));
    }

    const combinedImg = vStack.addImage(ctx.getImage());
    combinedImg.imageSize = new Size(75, 75);

    vStack.addSpacer(2);

    // 3. æ—¥æœŸæ–‡å­— (ç´§è´´åœ†ç¯)
    const df = new DateFormatter();
