  bar.addPath(fgP); bar.setFillColor(bDayPerson ? Color.yellow() : Color.green()); bar.fillPath();
  listWidget.addImage(bar.getImage());

  return listWidget;
}

function drawArc(ctx, size, progress, color) {
  const center = size/2, radius = 40, thick = 6;
  for (let i = 0; i <= 180 * progress; i += 2) {
    const a = (180 + i) * Math.PI / 180;
    ctx.setFillColor(color);
    ctx.fillEllipse(new Rect(center + radius * Math.cos(a) - thick/2, center + radius * Math.sin(a) - thick/2, thick, thick));
  }
}

