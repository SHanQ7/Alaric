let fm = FileManager.local();
const scriptPath = module.filename;
const dataPath = fm.joinPath(fm.documentsDirectory(), "lunar_birthday_data.json");

let familyData = [
  { name: "Áà∏Áà∏", month: 3, day: 15, emoji: "üë®" },
  { name: "Â¶àÂ¶à", month: 6, day: 20, emoji: "üë©" },
  { name: "Â¶πÂ¶π", month: 9, day: 5,  emoji: "üëß" },
  { name: "Êàë",   month: 11, day: 8,  emoji: "üë¶" }
];

if (fm.fileExists(dataPath)) {
  familyData = JSON.parse(fm.readString(dataPath));
}

if (config.runsInApp) {
  await showControlPanel();
} else {
  const widget = await createWidget();
  Script.setWidget(widget);
  Script.complete();
}

async function createWidget() {
  const listWidget = new ListWidget();
  const now = new Date();
  const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());

  let bDayPerson = null;
  const processed = familyData.map(p => {
    const solar = getCorrectSolar(p.month, p.day);
    const isToday = (today.toDateString() === solar.toDateString());
    if (isToday) bDayPerson = p;
    return { ...p, solar, isToday };
  });

  if (bDayPerson) {
    let grad = new LinearGradient();
    grad.colors = [new Color("#e52d27"), new Color("#b31217")];
    listWidget.backgroundGradient = grad;
  } else {
    listWidget.backgroundColor = new Color("#1c1c1e");
  }

  listWidget.setPadding(10, 5, 5, 5);

  const mainHStack = listWidget.addStack();
  mainHStack.layoutHorizontally();
  mainHStack.centerAlignContent();

  processed.forEach((p, i) => {
    const vStack = mainHStack.addStack();
    vStack.layoutVertically();
    
    const canvas = new DrawContext();
    const canvasW = 240; 
    const canvasH = 220; 
    canvas.size = new Size(canvasW, canvasH);
    canvas.opaque = false;

    // 1. Â§¥ÂÉè (ÁΩÆÈ°∂)
    canvas.setFont(Font.systemFont(60));
    canvas.setTextAlignedCenter();
    canvas.drawTextInRect(p.emoji, new Rect(0, 0, canvasW, 70));

    // 2. ÂºÄÂè£Êúù‰∏ãÂúÜÂºß (‰Ωç‰∫éÂ§¥ÂÉè‰∏ãÊñπ 15px)
    const center = { x: canvasW / 2, y: 125 }; 
    const radius = 70; 
    const thick = 10;  
    const diff = p.solar - now;
    const progress = p.isToday ? 1 : Math.max(0.1, 1 - (diff / (365 * 86400000)));

    canvas.setFillColor(new Color("#ffffff", 0.2));
    for (let a = 190; a <= 350; a += 4) {
      const rad = a * Math.PI / 180;
      const x = center.x + radius * Math.cos(rad);
      const y = center.y + radius * Math.sin(rad);
      canvas.fillEllipse(new Rect(x - thick/2, y - thick/2, thick, thick));
    }

    canvas.setFillColor(p.isToday ? Color.green() : new Color("#ffd60a"));
    const endAngle = 190 + (160 * progress);
    for (let a = 190; a <= endAngle; a += 3) {
      const rad = a * Math.PI / 180;
      const x = center.x + radius * Math.cos(rad);
      const y = center.y + radius * Math.sin(rad);
      canvas.fillEllipse(new Rect(x - thick/2, y - thick/2, thick, thick));
    }

    // 3. Êó•Êúü (Á≤ó‰ΩìÔºåÁΩÆ‰∫éÂºßÁ∫øÂºÄÂè£Â§Ñ)
    const df = new DateFormatter();
    df.dateFormat = "yyyy-MM-dd";
    const dateStr = p.isToday ? "BIRTHDAY" : df.string(p.solar);
    
    canvas.setFont(Font.heavySystemFont(22)); 
    canvas.setTextColor(Color.white());
    canvas.drawTextInRect(dateStr, new Rect(0, 140, canvasW, 50));

    const personImg = vStack.addImage(canvas.getImage());
    personImg.imageSize = new Size(88, 80);

    if (i < processed.length - 1) mainHStack.addSpacer();
  });

  listWidget.addSpacer(-5);

  const yp = getYearProgress();
  const bottomStack = listWidget.addStack();
  bottomStack.layoutVertically();
  bottomStack.setPadding(0, 15, 12, 15); 
  
  const labelStack = bottomStack.addStack();
  const progressText = labelStack.addText(`2025 ËøõÂ∫¶: ${Math.floor(yp * 100)}%`);
  progressText.font = Font.boldSystemFont(13);
  progressText.textColor = Color.white();
  progressText.textOpacity = 0.7;
  labelStack.addSpacer();
  
  bottomStack.addSpacer(6);

  const barW = 330; 
  const barCtx = new DrawContext();
  barCtx.size = new Size(barW, 12);
  barCtx.opaque = false;
  const bgP = new Path(); bgP.addRoundedRect(new Rect(0, 0, barW, 12), 6, 6);
  barCtx.addPath(bgP); barCtx.setFillColor(new Color("#ffffff", 0.15)); barCtx.fillPath();
  const fgP = new Path(); fgP.addRoundedRect(new Rect(0, 0, barW * yp, 12), 6, 6);
  barCtx.addPath(fgP); barCtx.setFillColor(bDayPerson ? Color.yellow() : Color.green()); barCtx.fillPath();
  bottomStack.addImage(barCtx.getImage());

  return listWidget;
}

