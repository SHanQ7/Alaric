async function createWidget() {
  const listWidget = new ListWidget();
  const now = new Date();
  const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());

  let bDayPerson = null;
  const processed = familyData.map(p => {
    const solar = getNextSolarFromLunar(p.month, p.day);
    const isToday = (today.getTime() === new Date(solar.getFullYear(), solar.getMonth(), solar.getDate()).getTime());
    if (isToday) bDayPerson = p;
    return { ...p, solar, isToday };
  });

  // èƒŒæ™¯
  if (bDayPerson) {
    let grad = new LinearGradient();
    grad.colors = [new Color("#e52d27"), new Color("#b31217")];
    listWidget.backgroundGradient = grad;
  } else {
    listWidget.backgroundColor = new Color("#1c1c1e");
  }

  listWidget.setPadding(10, 10, 10, 10);

  // --- æ ¸å¿ƒï¼šæ¨ªå‘å¸ƒå±€ ---
  const mainStack = listWidget.addStack();
  mainStack.layoutHorizontally();
  mainStack.centerAlignContent(); // ç¡®ä¿å…¨å‘˜å‚ç›´å±…ä¸­

  processed.forEach((p, i) => {
    // æ¯ä¸€ä¸ªäººçš„å‚ç›´å®¹å™¨
    const vStack = mainStack.addStack();
    vStack.layoutVertically();
    vStack.centerAlignContent(); // å®¹å™¨å†…æ‰€æœ‰å…ƒç´ å±…ä¸­å¯¹é½

    // 1. Emoji (å¯¹å‡†åœ†ç¯é¡¶éƒ¨)
    const emojiStack = vStack.addStack();
    emojiStack.addSpacer();
    const emojiText = emojiStack.addText(p.emoji);
    emojiText.font = Font.systemFont(22);
    emojiStack.addSpacer();
    
    vStack.addSpacer(2);

    // 2. åœ†ç¯ (å±…ä¸­)
    const ringStack = vStack.addStack();
    ringStack.addSpacer();
    const diff = p.solar - now;
    const progress = p.isToday ? 1 : Math.max(0, 1 - (diff / (365 * 86400000)));
    const ctx = new DrawContext();
    ctx.size = new Size(100, 100); ctx.opaque = false;
    drawArc(ctx, 100, 1, new Color("#ffffff", 0.15)); 
    drawArc(ctx, 100, progress, p.isToday ? Color.green() : new Color("#ffd60a"));
    const ringImg = ringStack.addImage(ctx.getImage());
    ringImg.imageSize = new Size(60, 60);
    ringStack.addSpacer();

    vStack.addSpacer(4);

    // 3. æ—¥æœŸ (YYYY-MM-DD)
    const dateStack = vStack.addStack();
    dateStack.addSpacer();
    const df = new DateFormatter();
    df.dateFormat = "yyyy-MM-dd";
    const dateText = dateStack.addText(p.isToday ? "TODAY" : df.string(p.solar));
    dateText.font = Font.boldSystemFont(8);
    dateText.textColor = Color.white();
    dateText.textOpacity = 0.8;
    dateStack.addSpacer();

    if (i < processed.length - 1) mainStack.addSpacer();
  });

  listWidget.addSpacer();

  // --- åº•éƒ¨ï¼šå¹´åº¦è¿›åº¦æ¡ ---
  const yp = getYearProgress();
  const nextYear = new Date(now.getFullYear() + 1, 0, 1);
  const daysLeft = Math.ceil((nextYear - now) / 86400000);

  const bottomStack = listWidget.addStack();
  bottomStack.layoutVertically();
  
  const labelStack = bottomStack.addStack();
  const progressText = labelStack.addText(`${now.getFullYear()}å¹´è¿›åº¦: ${Math.floor(yp * 100)}%`);
  progressText.font = Font.systemFont(9);
  progressText.textColor = Color.white();
  progressText.textOpacity = 0.5;
  labelStack.addSpacer();
  const leftText = labelStack.addText(`å‰© ${daysLeft} å¤©`);
  leftText.font = Font.systemFont(9);
  leftText.textColor = Color.white();
  leftText.textOpacity = 0.5;
  
  bottomStack.addSpacer(3);

  const barW = 300; 
  const barCtx = new DrawContext();
  barCtx.size = new Size(barW, 6);
  barCtx.opaque = false;
  const bgP = new Path(); bgP.addRoundedRect(new Rect(0, 0, barW, 6), 3, 3);
  barCtx.addPath(bgP); barCtx.setFillColor(new Color("#ffffff", 0.1)); barCtx.fillPath();
  const fgP = new Path(); fgP.addRoundedRect(new Rect(0, 0, barW * yp, 6), 3, 3);
  barCtx.addPath(fgP); barCtx.setFillColor(bDayPerson ? Color.yellow() : Color.green()); barCtx.fillPath();
  bottomStack.addImage(barCtx.getImage());

  return listWidget;
}

