async function createWidget() {
  const listWidget = new ListWidget();
  const now = new Date();
  const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
  let bDayPerson = null;

  const processed = familyData.map(p => {
    const solar = getCorrectSolar(p.month, p.day);
    const isToday = (today.toDateString() === solar.toDateString());
    if (isToday) bDayPerson = p;
    return { ...p, solar, isToday };
  });

  listWidget.backgroundColor = bDayPerson ? new Color("#b31217") : new Color("#1c1c1e");
  listWidget.setPadding(10, 5, 5, 5);

  const mainHStack = listWidget.addStack();
  mainHStack.layoutHorizontally();

  processed.forEach((p, i) => {
    const vStack = mainHStack.addStack();
    vStack.layoutVertically();
    const canvas = new DrawContext();
    canvas.size = new Size(240, 220);
    canvas.opaque = false;

    // 1. å¤´åƒ (ç½®é¡¶)
    canvas.setFont(Font.systemFont(65));
    canvas.setTextAlignedCenter();
    canvas.drawTextInRect(p.emoji, new Rect(0, 0, 240, 80));

    // 2. å¼€å£æœä¸‹å¼§çº¿ (iPhone 13 é€‚é…)
    const center = { x: 120, y: 130 }, radius = 75, thick = 11;
    const progress = p.isToday ? 1 : Math.max(0.1, 1 - ((p.solar - now) / (365 * 86400000)));

    canvas.setFillColor(new Color("#ffffff", 0.2));
    for (let a = 190; a <= 350; a += 4) {
      const rad = a * Math.PI / 180;
      canvas.fillEllipse(new Rect(center.x + radius * Math.cos(rad) - thick/2, center.y + radius * Math.sin(rad) - thick/2, thick, thick));
    }
    canvas.setFillColor(p.isToday ? Color.green() : Color.yellow());
    for (let a = 190; a <= 190 + (160 * progress); a += 3) {
      const rad = a * Math.PI / 180;
      canvas.fillEllipse(new Rect(center.x + radius * Math.cos(rad) - thick/2, center.y + radius * Math.sin(rad) - thick/2, thick, thick));
    }

    // 3. ç²—ä½“æ—¥æœŸ
    const df = new DateFormatter(); df.dateFormat = "yyyy-MM-dd";
    canvas.setFont(Font.heavySystemFont(22));
    canvas.setTextColor(Color.white());
    canvas.drawTextInRect(p.isToday ? "BIRTHDAY" : df.string(p.solar), new Rect(0, 145, 240, 55));

    vStack.addImage(canvas.getImage()).imageSize = new Size(88, 80);
    if (i < processed.length - 1) mainHStack.addSpacer();
  });

  listWidget.addSpacer(-5);
  const yp = (now - new Date(now.getFullYear(), 0, 1)) / (new Date(now.getFullYear() + 1, 0, 1) - new Date(now.getFullYear(), 0, 1));
  const btm = listWidget.addStack(); btm.layoutVertically(); btm.setPadding(0, 15, 10, 15);
  const txt = btm.addText(`2025 å¹´åº¦è¿›åº¦: ${Math.floor(yp * 100)}%`);
  txt.font = Font.boldSystemFont(13); txt.textColor = Color.white(); txt.textOpacity = 0.7;
  btm.addSpacer(5);
  const bar = new DrawContext(); bar.size = new Size(330, 12);
  bar.setFillColor(new Color("#ffffff", 0.15)); bar.fillPath(new Path().addRoundedRect(new Rect(0, 0, 330, 12), 6, 6));
  bar.setFillColor(bDayPerson ? Color.yellow() : Color.green()); bar.fillPath(new Path().addRoundedRect(new Rect(0, 0, 330 * yp, 12), 6, 6));
  btm.addImage(bar.getImage());
  return listWidget;
}

function getCorrectSolar(m, d) {
  const n = new Date(); const today = new Date(n.getFullYear(), n.getMonth(), n.getDate());
  let s = lunarToSolar(2025, m, d);
  return (s >= today) ? s : lunarToSolar(2026, m, d);
}

