async function createWidget() {
  const listWidget = new ListWidget();
  const now = new Date();
  
  // æ£€æŸ¥ç”Ÿæ—¥çŠ¶æ€
  let bDayPerson = null;
  const processed = familyData.map(p => {
    const solar = getNextSolarFromLunar(p.month, p.day);
    const isToday = (now.getMonth() === solar.getMonth() && now.getDate() === solar.getDate());
    if (isToday) bDayPerson = p;
    return { ...p, solar, isToday };
  });

  // èƒŒæ™¯è‰²åˆ‡æ¢
  if (bDayPerson) {
    let grad = new LinearGradient();
    grad.colors = [new Color("#e52d27"), new Color("#b31217")];
    listWidget.backgroundGradient = grad;
  } else {
    listWidget.backgroundColor = new Color("#1c1c1e");
  }

  listWidget.setPadding(12, 10, 10, 10);

  // --- ä¸Šéƒ¨ï¼šå››äººæ’å¸ƒ ---
  const mainStack = listWidget.addStack();
  mainStack.layoutHorizontally();

  processed.forEach((p, i) => {
    const personStack = mainStack.addStack();
    personStack.layoutVertically();
    personStack.centerAlignContent();
    
    // 1. å¤´åƒ Emoji
    const emojiText = personStack.addText(p.emoji);
    emojiText.font = Font.systemFont(26);
    emojiText.centerAlignText();
    
    personStack.addSpacer(2);

    // 2. è¿›åº¦åœ†ç¯
    const diff = p.solar - now;
    const progress = p.isToday ? 1 : Math.max(0, 1 - (diff / (365 * 86400000)));
    const ctx = new DrawContext();
    ctx.size = new Size(100, 100); ctx.opaque = false;
    drawArc(ctx, 100, 1, new Color("#ffffff", 0.1)); 
    drawArc(ctx, 100, progress, p.isToday ? Color.green() : new Color("#ffd60a"));
    
    const ringImg = personStack.addImage(ctx.getImage());
    ringImg.imageSize = new Size(68, 68);
    ringImg.centerAlignImage();

    personStack.addSpacer(4);

    // 3. ç”Ÿæ—¥æ—¥æœŸ (YYYY-MM-DD)
    const df = new DateFormatter();
    df.dateFormat = "yyyy-MM-dd";
    const dateText = personStack.addText(p.isToday ? "HAPPY B-DAY" : df.string(p.solar));
    dateText.font = Font.boldSystemFont(8);
    dateText.textColor = Color.white();
    dateText.textOpacity = p.isToday ? 1 : 0.7;
    dateText.centerAlignText();

    if (i < processed.length - 1) mainStack.addSpacer();
  });

  listWidget.addSpacer();

  // --- åº•éƒ¨ï¼šå¹´åº¦è¿›åº¦æ¡ + å‰©ä½™å¤©æ•° ---
  const yearProgress = getYearProgress();
  const nextYear = new Date(now.getFullYear() + 1, 0, 1);
  const daysLeft = Math.ceil((nextYear - now) / (1000 * 60 * 60 * 24));

  const bottomStack = listWidget.addStack();
  bottomStack.layoutVertically();
  
  // æ–‡å­—è¡Œï¼šå·¦ä¾§æ˜¯ç™¾åˆ†æ¯”ï¼Œå³ä¾§æ˜¯å‰©ä½™å¤©æ•°
  const labelStack = bottomStack.addStack();
  labelStack.layoutHorizontally();
  
  const progressText = labelStack.addText(`${now.getFullYear()}å¹´è¿›åº¦: ${Math.floor(yearProgress * 100)}%`);
  progressText.font = Font.systemFont(10);
  progressText.textColor = Color.white();
  progressText.textOpacity = 0.6;
  
  labelStack.addSpacer();
  
  const leftText = labelStack.addText(`è·ç¦»æ˜å¹´è¿˜å‰© ${daysLeft} å¤©`);
  leftText.font = Font.systemFont(10);
  leftText.textColor = Color.white();
  leftText.textOpacity = 0.6;
  
  bottomStack.addSpacer(5);

  // é•¿è¿›åº¦æ¡
  const barW = 310;
  const barCtx = new DrawContext();
  barCtx.size = new Size(barW, 8);
  barCtx.opaque = false;
  
  const bgP = new Path();
  bgP.addRoundedRect(new Rect(0, 0, barW, 8), 4, 4);
  barCtx.addPath(bgP);
  barCtx.setFillColor(new Color("#ffffff", 0.15));
  barCtx.fillPath();

  const fgP = new Path();
  fgP.addRoundedRect(new Rect(0, 0, barW * yearProgress, 8), 4, 4);
  barCtx.addPath(fgP);
  barCtx.setFillColor(bDayPerson ? new Color("#ffd60a") : new Color("#34c759"));
  barCtx.fillPath();

  bottomStack.addImage(barCtx.getImage());

  return listWidget;
}

