  }

  listWidget.setPadding(10, 10, 10, 10);

  // --- æ¨ªå‘ä¸» Stack ---
  const mainHStack = listWidget.addStack();
  mainHStack.layoutHorizontally();
  mainHStack.centerAlignContent();

  processed.forEach((p, i) => {
    const vStack = mainHStack.addStack();
    vStack.layoutVertically();
    
    // ã€æ ¸å¿ƒã€‘ä½¿ç”¨å•ä¸€ç”»å¸ƒç»˜åˆ¶æ•´ä¸ªäººå‘˜ä¿¡æ¯å—
    const canvas = new DrawContext();
    const canvasW = 140; // å®½åº¦è¶³å¤Ÿæ˜¾ç¤º YYYY-MM-DD
    const canvasH = 120; // é«˜åº¦
    canvas.size = new Size(canvasW, canvasH);
    canvas.opaque = false;

    // 1. ç»˜åˆ¶ Emoji (ä½äºé¡¶éƒ¨å±…ä¸­)
    canvas.setFont(Font.systemFont(26));
    canvas.setTextAlignedCenter();
    canvas.drawTextInRect(p.emoji, new Rect(0, 0, canvasW, 35));

    // 2. ç»˜åˆ¶å¼€å£æœä¸‹çš„åŠåœ†å¼§
    const center = { x: canvasW / 2, y: 55 }; // å¼§çº¿çš„åœ†å¿ƒ
    const radius = 45;
    const thick = 6;
    
    // è®¡ç®—è¿›åº¦ (0.0 - 1.0)
    const diff = p.solar - now;
    const progress = p.isToday ? 1 : Math.max(0.05, 1 - (diff / (365 * 86400000)));

    // ç»˜åˆ¶åº•è‰²å¼§çº¿ (ä» 185åº¦ åˆ° 355åº¦ï¼Œå¼€å£æœä¸‹)
    canvas.setFillColor(new Color("#ffffff", 0.15));
    for (let a = 185; a <= 355; a += 3) {
      const rad = a * Math.PI / 180;
      const x = center.x + radius * Math.cos(rad);
      const y = center.y + radius * Math.sin(rad);
      canvas.fillEllipse(new Rect(x - thick/2, y - thick/2, thick, thick));
    }

    // ç»˜åˆ¶è¿›åº¦å¼§çº¿
    canvas.setFillColor(p.isToday ? Color.green() : new Color("#ffd60a"));
    const endAngle = 185 + (170 * progress);
    for (let a = 185; a <= endAngle; a += 3) {
      const rad = a * Math.PI / 180;
      const x = center.x + radius * Math.cos(rad);
      const y = center.y + radius * Math.sin(rad);
      canvas.fillEllipse(new Rect(x - thick/2, y - thick/2, thick, thick));
    }

    // 3. ç»˜åˆ¶æ—¥æœŸ (ä½äºåŠåœ†å¼§å¼€å£å†…éƒ¨ä¸­å¿ƒ)
    const df = new DateFormatter();
    df.dateFormat = "yyyy-MM-dd";
    const dateStr = p.isToday ? "HAPPY B-DAY" : df.string(p.solar);
    
    canvas.setFont(Font.boldSystemFont(10));
    canvas.setTextColor(Color.white());
    // æ”¾åœ¨åœ†å¿ƒ y è½´ä¸‹æ–¹ä¸€ç‚¹çš„ä½ç½®ï¼Œæ­£å¥½åœ¨å¼§çº¿å¼€å£å¤„
    canvas.drawTextInRect(dateStr, new Rect(0, 65, canvasW, 20));

    // å°†ç”»å¸ƒè½¬ä¸ºå›¾ç‰‡æ”¾å…¥ Stack
    const personImg = vStack.addImage(canvas.getImage());
    personImg.imageSize = new Size(70, 60);

    if (i < processed.length - 1) mainHStack.addSpacer();
  });

  listWidget.addSpacer();

  // --- åº•éƒ¨å¹´åº¦è¿›åº¦æ¡ ---
  const yp = getYearProgress();
  const bottomStack = listWidget.addStack();
  bottomStack.layoutVertically();
  bottomStack.setPadding(0, 5, 12, 5); 
  
  const labelStack = bottomStack.addStack();
