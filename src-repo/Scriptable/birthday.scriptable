async function createWidget() {
  const listWidget = new ListWidget();
  const now = new Date();
  const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());

  let bDayPerson = null;
  const processed = familyData.map(p => {
    // å¼ºåˆ¶å…ˆè®¡ç®— 2025 å¹´çš„å…¬å†
    const solar = getSolarInYear(2025, p.month, p.day);
    // å¦‚æœ 2025 å¹´çš„ç”Ÿæ—¥å·²ç»è¿‡å»äº†ï¼ˆè¶…è¿‡1å¤©ï¼‰ï¼Œæ‰çœ‹ 2026 å¹´
    const isPast = (today.getTime() > solar.getTime() + 86400000);
    const finalSolar = isPast ? getSolarInYear(2026, p.month, p.day) : solar;
    
    const isToday = (today.getTime() === new Date(finalSolar.getFullYear(), finalSolar.getMonth(), finalSolar.getDate()).getTime());
    if (isToday) bDayPerson = p;
    return { ...p, solar: finalSolar, isToday };
  });

  // èƒŒæ™¯
  if (bDayPerson) {
    let grad = new LinearGradient();
    grad.colors = [new Color("#e52d27"), new Color("#b31217")];
    listWidget.backgroundGradient = grad;
  } else {
    listWidget.backgroundColor = new Color("#1c1c1e");
  }

  listWidget.setPadding(12, 12, 12, 12);

  const mainStack = listWidget.addStack();
  mainStack.layoutHorizontally();
  mainStack.bottomAlignContent();

  processed.forEach((p, i) => {
    const vStack = mainStack.addStack();
    vStack.layoutVertically();
    vStack.centerAlignContent();

    // --- å°† Emoji å’Œ åœ†ç¯ ç»˜åˆ¶åœ¨åŒä¸€ä¸ªç”»å¸ƒä¸Šï¼Œç¡®ä¿ç»å¯¹å±…ä¸­ ---
    const canvasSize = 120;
    const ctx = new DrawContext();
    ctx.size = new Size(canvasSize, canvasSize);
    ctx.opaque = false;

    // ç»˜åˆ¶ Emoji
    ctx.setFont(Font.systemFont(32));
    ctx.setTextAlignedCenter();
    ctx.drawTextInRect(p.emoji, new Rect(0, 0, canvasSize, 40));

    // è®¡ç®—è¿›åº¦
    const diff = p.solar - now;
    const progress = p.isToday ? 1 : Math.max(0, 1 - (diff / (365 * 86400000)));
    
    // ç»˜åˆ¶åœ†ç¯
