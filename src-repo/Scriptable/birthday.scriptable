function getSolarInYear(year, lMonth, lDay) {
  const lunarYearArr = [0x0b557, 0x06ca0, 0x0b550, 0x15355, 0x04da0, 0x0a5b0, 0x14573, 0x052b0, 0x0a9a8, 0x0e950, 0x06aa0, 0x0aea6, 0x0ab50, 0x04b60, 0x0aae4, 0x0a570, 0x05260, 0x0f263, 0x0d950, 0x05b57, 0x056a0, 0x096d0, 0x04dd5, 0x04ad0, 0x0a4d0, 0x0d4d4, 0x0d250, 0x0d558, 0x0b540, 0x0b6a0, 0x195a6, 0x095b0, 0x049b0, 0x0a974, 0x0a4b0, 0x0b27a, 0x06a50, 0x06d40, 0x0af46, 0x0ab60, 0x09570, 0x04af5, 0x04970, 0x064b0, 0x074a3, 0x0ea50, 0x06b58, 0x055c0, 0x0ab60, 0x096d5, 0x092e0, 0x0c960, 0x0d954, 0x0d4a0, 0x0da50, 0x07552, 0x056a0, 0x0abb7, 0x025d0, 0x092d0, 0x0cab5, 0x0a950, 0x0b4a0, 0x0baa4, 0x0ad50, 0x055d9, 0x04ba0, 0x0a5b0, 0x15176, 0x052b0, 0x0a930, 0x07954, 0x06aa0, 0x0ad50, 0x05b52, 0x04b60, 0x0a6e6, 0x0a4e0, 0x0d260, 0x0ea65, 0x0d530, 0x05aa0, 0x076a3, 0x096d0, 0x04afb, 0x04ad0, 0x0a4d0, 0x1d0b6, 0x0d250, 0x0d520, 0x0dd45, 0x0b5a0, 0x056d0, 0x055b2, 0x049b0, 0x0a577, 0x0a4b0, 0x0aa50, 0x1b255, 0x06d20, 0x0ada0, 0x14b63, 0x09370, 0x049f8, 0x04970, 0x064b0, 0x168a6, 0x0ea50, 0x06b20, 0x1a6c4, 0x0aae0, 0x0a2e0, 0x0d2e3, 0x0c960, 0x0d557, 0x0d4a0, 0x0da50, 0x05d55, 0x056a0, 0x0a6d0, 0x055d4, 0x052d0, 0x0a9b8, 0x0a950, 0x0b4a0, 0x0b6a6, 0x0ad50, 0x055a0, 0x0aba4, 0x0a5b0, 0x052b0, 0x0b273, 0x06930, 0x07337, 0x06aa0, 0x0ad50, 0x14b55, 0x04b60, 0x0a570, 0x054e4, 0x0d160, 0x0e968, 0x0d520, 0x0daa0, 0x16aa6, 0x056d0, 0x04ae0, 0x0a9d4, 0x0a2d0, 0x0d150, 0x0f252, 0x0d520];
  const getS = (y, m, d) => (Date.UTC(y, m-1, d) - Date.UTC(1949, 0, 29)) / 86400000 + 1;
  
  // åœ¨æŒ‡å®šå¹´ä»½èŒƒå›´å†…æœç´¢ï¼ˆæ¯”å¦‚ 2025 å¹´ï¼‰
  let start = new Date(year, 0, 1);
  for (let i=0; i<385; i++) {
    let d = new Date(start.getTime() + i*86400000);
    let span = getS(d.getFullYear(), d.getMonth()+1, d.getDate());
    let ly, lm, ld;
    for (let j=0; j<lunarYearArr.length; j++) {
      let yDays = 0; let lyData = lunarYearArr[j];
      for (let k=0x8000; k>0x8; k>>=1) yDays += (lyData & k) ? 30 : 29;
      if (lyData & 0xf) yDays += (lyData & 0xf0000) ? 30 : 29;
      if (span <= yDays) { ly = 1949+j; break; } span -= yDays;
    }
    let lyData = lunarYearArr[ly-1949]; let ms = [];
    for (let k=0x8000; k>0x8; k>>=1) ms.push((lyData & k) ? 30 : 29);
    if (lyData & 0xf) ms.splice(lyData & 0xf, 0, (lyData & 0xf0000) ? 30 : 29);
    for (let k=0; k<ms.length; k++) {
      if (span <= ms[k]) { lm = k+1; ld = Math.floor(span); break; } span -= ms[k];
    }
    if (lm === lMonth && ld === lDay) return d;
  }
}

// --- åœ¨ç”»å¸ƒä¸Šç›´æ¥ç»˜åˆ¶åœ†ç¯ ---
function drawArcInContext(ctx, rect, progress, color) {
  const center = { x: rect.x + rect.width/2, y: rect.y + rect.height/2 };
  const radius = rect.width / 2;
  const thick = 6;
  for (let i = 0; i <= 180 * progress; i += 2) {
    const a = (180 + i) * Math.PI / 180;
    ctx.setFillColor(color);
    ctx.fillEllipse(new Rect(center.x + radius * Math.cos(a) - thick/2, center.y + radius * Math.sin(a) - thick/2, thick, thick));
  }
}

function getYearProgress() {
  const now = new Date();
  const start = new Date(now.getFullYear(), 0, 1);
  const end = new Date(now.getFullYear() + 1, 0, 1);
  return (now - start) / (end - start);
}

