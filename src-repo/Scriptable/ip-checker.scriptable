  // --- å·¦ä¾§ä¿¡æ¯æ  ---
  let leftStack = mainStack.addStack();
  leftStack.layoutVertically();
  
  // æ ¸å¿ƒï¼šæ­£æ–¹å½¢è¾¹æ¡†æ ‡ç­¾å‡½æ•°
  const addBoxInfo = (shortLabel, fullValue) => {
