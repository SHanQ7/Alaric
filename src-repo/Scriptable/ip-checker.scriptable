    rowStack.addSpacer(8); 

    // 2. ä¿¡æ¯å†…å®¹å®¹å™¨ (å­—ä½“å·²åŠ ç²—)
    let valueStack = rowStack.addStack();
    let vText = valueStack.addText(fullValue);
    vText.font = Font.boldSystemFont(12); // ä½¿ç”¨åŠ ç²—å­—ä½“å¹¶ç•¥å¾®è°ƒå¤§å­—å·
    vText.textColor = mainTextColor;
    vText.lineLimit = 1;
    vText.minimumScaleFactor = 0.7; // å¢åŠ ç¼©æ”¾å®¹å¿åº¦ï¼Œé˜²æ­¢è¿‡ç²—å¯¼è‡´æº¢å‡º
    
    leftStack.addSpacer(5); 
  };

  // å¡«å…¥æ•°æ®
  addAlignedInfo("ä½", `${flag} ${data.countryCode || 'UN'} Â· ${data.city || ''}`);
  addAlignedInfo("åœ°", data.ip || "N/A");
  addAlignedInfo("å•†", data.asOrganization || "N/A");
  addAlignedInfo("ç¼–", data.asn ? `AS${data.asn}` : "N/A");
  addAlignedInfo("ç±»", data.isResidential ? "ä½å®…ç½‘ç»œ" : "æœºæˆ¿ç½‘ç»œ");
  
  leftStack.addSpacer(4);
  let time = leftStack.addText(`Updated: ${new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}`);
