    // åˆ›å»ºæ­£æ–¹å½¢å®¹å™¨
    const boxSize = new Size(22, 22); // é’ˆå¯¹ iPhone 13 ä¼˜åŒ–çš„å¤§å°
    let boxStack = rowStack.addStack();
    boxStack.size = boxSize;
    boxStack.cornerRadius = 6;
    boxStack.borderWidth = 2; // è¾¹æ¡†ç²—ç»†
    boxStack.borderColor = squareColor;
    boxStack.centerAlignContent();
    
    // æ–¹æ¡†å†…çš„æ–‡å­—ï¼ˆå–æ ‡ç­¾é¦–å­—æˆ–ç¼©å†™ï¼‰
    let lText = boxStack.addText(shortLabel);
    lText.font = Font.boldSystemFont(10);
    lText.textColor = squareColor;
    
    rowStack.addSpacer(10); // æ–¹æ¡†ä¸åé¢æ–‡å­—çš„é—´è·
    
    // å³ä¾§æ•°å€¼
    let vText = rowStack.addText(fullValue);
